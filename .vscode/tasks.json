{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "g++ debug",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++11",
        "-Wall",
        "${file}",
        "-DUNITEST=true"
      ],
    },
    {
      "label": "g++ release",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++11",
        "-Wall",
        "${file}",
        "-DUNITEST=true"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}