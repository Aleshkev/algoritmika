{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "g++ debug",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++11",
        "-Wall",
        "-Wextra",
        "-Wshadow",
        "-Wfloat-equal",
        "-DUNITEST=true",
        "-D_GLIBCXX_DEBUG",
        "-D_GLIBCXX_DEBUG_PEDANTIC",
        "${file}"
      ],
    },
    {
      "label": "g++ release",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++11",
        "-Wall",
        "-O2",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
